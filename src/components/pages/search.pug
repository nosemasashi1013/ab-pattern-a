extends ../common/_layout

block pageOption
	-
		const breadcrumbItem = [
			{
				text : "トップページ",
				link : "./index.html",
				isCurrent : false

			},
			{
				text : "２階層",
				link : "./index.html",
				isCurrent : false

			},
			{
				text : "ライフシーンで探す",
				link : "",
				isCurrent : true

			},
		]

include ../base/Breadcrumb.pug
include ../base/Button.pug
include ../base/Banner.pug

block content
	+Breadcrumb({items: breadcrumbItem})

	section.section-content__header
		+Banner({
			title: "選んで探す",
			description: "人生の出来事、「こんなことがしたい」「知りたい」といったことを\n選択いただくことで、ご自身に合った検索ができます。",
			icon: "search_menu_img.png"
		})

	section.section-content
		form
			.section-content
				include ../parts/_scene.pug

			.section-content.bg-light
				include ../parts/_status.pug

			.section-content
				include ../parts/_matters.pug

			.section-content.layout-default
				.search-btn__container
					+Button({type: "submit", label: "検索する"})
