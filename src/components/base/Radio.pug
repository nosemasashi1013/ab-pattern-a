//-
  params: {
    id: string,
    name: string,
    value: string,
    checked?: boolean,
    label: string
  }
mixin Radio(params={})
  - const props = Object.assign({}, params)
  label.radio(
    for=props.id
  )
    input(
      id=props.id
      class="radio__input"
      type="radio"
      name=props.name
      value=props.value
      checked=props.checked
    )
    span.radio__label
      =props.label